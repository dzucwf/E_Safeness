<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:id="@+id/img_drugsetting_nav_bg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/nav_bar" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/navbar_btn_date_select"
        android:onClick="openCalendar"
        android:id="@+id/btn_drug_nav_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_drug_title"
        android:id="@+id/textView"
        android:textColor="#ff298bd0"
        android:textSize="18dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-01-01"
        android:id="@+id/txv_drug_nav_date_text"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:layout_alignLeft="@+id/btn_drug_nav_date"
        android:layout_alignRight="@+id/btn_drug_nav_date"
        android:layout_alignTop="@+id/btn_drug_nav_date"
        android:layout_alignBottom="@+id/btn_drug_nav_date"
        android:textSize="14sp"
        android:gravity="center_horizontal|center_vertical"
        />
    <ImageView
        android:layout_width="72dp"
        android:layout_height="54dp"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_drug_nav_item" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步"
        android:id="@+id/txv_drug_nav_sync"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="4dp"
        android:layout_alignLeft="@+id/btn_drug_nav_item"
        android:layout_alignRight="@+id/btn_drug_nav_item"
        android:layout_alignTop="@+id/btn_drug_nav_item"
        android:layout_alignBottom="@+id/btn_drug_nav_item"
        android:textSize="13sp"
        android:textColor="#ff0f82da"
        android:gravity="center_horizontal|center_vertical"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/img_drugsetting_nav_bg"
        android:layout_centerHorizontal="true" />
</RelativeLayout>